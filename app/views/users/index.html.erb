<div class="col-sm-4" style="text-align: center">
<div class="post-full panel panel-default">
  <h1>All users</h1>

  <%= will_paginate %>

    <% @users.each do |user| %>
      <div class="user-list">
        <%= link_to user.name, user %>
        <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </div>
    <% end %>

  <%= will_paginate %>
</div>
</div>
