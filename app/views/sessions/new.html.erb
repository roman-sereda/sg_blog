<% provide(:title, "Sign in") %>

<div class="col-sm-4"></div>
<div class="col-sm-4" style="text-align: center">
  <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>
      <br>
      <%= f.text_field :email, placeholder: "Enter email", class: "form-control", id:"email-field" %>
      <br>
      <%= f.password_field :password, placeholder: "Enter password", class: "form-control", id: "password-field" %>
      <br>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
<div class="col-sm-4"></div>
