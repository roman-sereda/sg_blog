$('#error').remove();
document.getElementById('comment-area').style.border='1xp solid gray';

<% if @comment.valid? %>
  $('#comment-area').val('');
  $("#comments").append("<%= escape_javascript render(:partial => 'comments/comment', :locals => { :comment => @comment }) %>");
<% else %>
  document.getElementById('comment-area').style.border='1px double red';
  $('#comments').append("<%= escape_javascript render(:partial => 'comments/error', :locals => { :c => @comment }) %>");
<% end %>
